#!/bin/sh

update() {
    sum=0
    for arg; do
        read n < $arg
        sum=$((sum + n))
    done
    cache=/tmp/${1##*/}

    [ -f "$cache" ] && read old < $cache || old=0
    echo "$sum" >$cache
    echo "$((sum - old))"
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "ðŸ”»%4sB ðŸ”º%4sB\n" $(numfmt --to=iec $rx $tx)
